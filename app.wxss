/* 全屏遮罩层 */
.footfixed { 
  position: fixed;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5); 
  z-index: 50;
}
/* 跳转小标 */
.skip-icon{
  position: absolute;
  right: 24rpx;top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
	height: 30rpx;
}
/* 底部绝对定位  */
.bottom-fixed{
  position: fixed;
  bottom: 0; left: 0;
  width: 100%;
}
