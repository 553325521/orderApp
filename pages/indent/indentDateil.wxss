/*  */
.order-bottom{
  padding: 0 50rpx;
  background-color: #fff
}
.total{
  padding-bottom: 13rpx 
}
.total text{
  padding-left: 12rpx
}
.deal{
  margin: 0 95rpx 0 250rpx
}
.total-prices{
  padding-right: 12rpx
}
.oper{
  padding: 13rpx 0;
