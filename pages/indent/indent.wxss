/* pages/indent/indent.wxss */

.indent-page {
  background-color: #fff;
}

.page {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.swiper-tab {
  line-height: 84rpx;
  border: 1px solid #e4e4e4;
}

.swiper-tab>view.on {
  border-bottom: 1px solid #da2725;
}

.swiper-tab .icon {
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-width: 0 10rpx 10rpx;
  border-style: solid;
  border-color: transparent transparent #da2725; /*透明 透明  灰*/
}

.swiper-tab .num {
  top: 10rpx;
  right: 0;
  width: 70rpx;
  line-height: 40rpx;
}

.time-slot {
  padding: 13rpx 30rpx 18rpx 30rpx;
}

.time-slot .icon {
  width: 44rpx;
  height: 50rpx;
  margin-right: 11rpx;
}

.sele-time {
  border-radius: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
  background-color: #dededd;
}

.sele-time view {
  padding-left: 16rpx;
}

.sele-time view image {
  width: 25rpx;
  height: 20rpx;
}

.begin {
  margin-right: 42rpx;
}

