/* pages/demo/x-scroll-view.wxss */
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background-color: #F8F8F8;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  cursor:default;
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;
  -webkit-text-size-adjust:none;
  text-size-adjust:none;
}

x-scroll-view {
  height: calc(100% - 51px);
}

.header {
  /* height: 60px; */
  line-height: 50px;
  text-align: center;
  background: #fff;
  border-bottom: solid 1px #f4f4f4;
}

.view {
  height: 100px;
  line-height: 100px;
  text-align: center;
}

.select-before-color {
  color: #666;
}

.sx_img {
  width: 28rpx;
  height: 28rpx;
}

.swiper-tab {
  line-height: 84rpx;
  border: 1px solid #e4e4e4;
}

.swiper-tab>view.on {
  border-bottom: 1px solid #da2725;
}

.swiper-tab .icon {
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-width: 0 10rpx 10rpx;
  border-style: solid;
  border-color: transparent transparent #da2725; /*透明 透明  灰*/
}

.item-head {
  border-top: 1px #ead5d7 solid;
  border-bottom: 1px #ead5d7 solid;
  background-color: #fefafa;
  line-height: 40rpx;
  padding: 0 30rpx;
}

.item-list {
  padding: 0 16rpx;
}

.item {
  border-bottom: 1px solid #e9e8e8;
  line-height: 98rpx;
  padding: 0 26rpx 0 46rpx;
}

