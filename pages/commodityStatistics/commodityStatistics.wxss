/* 筛选样式开始 */
.select-before-color {
  color: #666;
}

.sx_img {
  width: 28rpx;
  height: 28rpx;
}

.select-after-color {
  color: #ef9ba0;
}

.select_box {
  width: 45%;
  height: 70%;
  border-radius: 14rpx;
  position: relative;
}

.select_box .select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.select_box .select .select_text {
  font-size: 26rpx;
  color: #777;
  line-height: 28rpx;
  flex: 1;
}

.select_box .select .select_img {
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition: transform 0.3s;
}

.select_box .select .select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 7%;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: rgba(0, 0, 0, 0.4);
  /* transition: height 0.3s; */
  /* border-left: 1px solid #efefef;
  border-right: 1px solid #efefef; */
  z-index: 999;
}

.option_box .option {
  display: block;
  line-height: 30rpx;
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.select-content-padding {
  padding-top: 40rpx;
