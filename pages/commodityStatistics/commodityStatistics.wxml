<!--pages/commodityStatistics/commodityStatistics.wxml-->
<view class='type-parameter dp-flex font-28 c6 bg-fff'>
  <view class='flex-1 dp-flex'>
    <picker class='w100 tc' value="{{shopIndex}}" range="{{shopArr}}" bindchange="bindShopChange">
      <view class="picker">
        {{shopArr[shopIndex]}}
      </view>
    </picker>
    <image src='../../images/icon/down-icon.png'></image>
  </view>
  <view class='flex-1 dp-flex'>
    <picker class='w100 tc' value="{{dateIndex}}" range="{{dateArr}}" bindchange="bindShopChange">
      <view class="picker">
        {{dateArr[dateIndex]}}
      </view>
    </picker>
    <image src='../../images/icon/down-icon.png'></image>
  </view>
  <view class='flex-1 dp-flex'>
    <picker class='w100 tc' value="{{operatorIndex}}" range="{{operatorArr}}" bindchange="bindShopChange">
      <view class="picker">
        {{operatorArr[operatorIndex]}}
      </view>
    </picker>
    <image src='../../images/icon/down-icon.png'></image>
  </view>
</view>
<view class='product-list font-28 c6'>
  <view class='head dp-flex flex-jc-sb'>
    <view>商品名称</view>
    <view>商品数量</view>
    <view>商品金额</view>
  </view>
  <scroll-view scroll-y class='list'>
    <block wx:for = "{{productList}}" wx:key="{{index}}">
      <view class='item dp-flex font-28 c6 pr' data-index='{{index}}' bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}px">
        <view class='name'>青椒肉丝</view>
        <view class='part tr'>5份</view>
        <view class='moeny c2821 tr'>￥10.00</view>
      </view>
    </block>
  </scroll-view>
</view>
