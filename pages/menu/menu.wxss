/* pages/menu/menu.wxss */
@import "../template/chosenPosition.wxss";

.menu-nav{
  position: fixed;
  top: 0;left: 0;
  z-index: 20;
  width: 180rpx;
}
.menu-nav .nav-item{
  line-height: 98rpx;
}
.nav-item text{
  top: 10rpx;
  right: -8rpx;
  width: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background-color: #DD137B;
}
/* 搜索框  */
.search-box{
  position: fixed;
  top:0;right: 0;
  height: 92rpx;
  width: 574rpx;
  background-color: #DADAD9;
  z-index: 10
}
.search-box input{
  width: 542rpx;
  line-height: 52rpx;
  border-radius: 52rpx;
  margin: auto;
  margin-top: 46rpx;
  transform: translateY(-50%);
  padding-left: 64rpx
}
.search-box .ss-icon{
  width: 28rpx;
  height: 32rpx;
  top: 50%;left: 28rpx;
  z-index: 30
}
/* 选好了  */
.selected{
  position: fixed;
  right: 38rpx;bottom: 106rpx;
  width: 144rpx;
  line-height: 58rpx;
  border-radius: 58rpx;
  background-color: #DEDEDD;
  z-index: 60
}
.selected.on{
   background-color: #EF9BA0;
}
/* 购物车、挂单  */
.cat,.entry-orders{
  position: fixed;
  left: 48rpx;
  bottom: 106rpx;
  width: 74rpx;
  height: 74rpx;
  z-index: 50
}
.orders-cat{
  position: absolute;
  left: 38rpx;
  top: -34rpx
}
.cat text{
  top: -3rpx;
  right: -20rpx;
  width: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  background-color: #DA1A7D;
}
.entry-orders{
  bottom: 190rpx;
  z-index: 10
}
/* 挂单列表  */
.entry-orders-list{
  z-index: 50
}
.box-content{
   bottom: 90rpx; left: 0;
   z-index: 60;
}
.box-content .head{
  background-color: #EFEEEE;
  line-height: 50rpx;
  color: #72706F;
  padding: 0 44rpx 0 116rpx;
  justify-content: space-between
}
.dele-btn image{
  width: 30rpx;
  height: 32rpx;
  transform: translateY(5rpx)
}
.entry-orders-list .list{
  padding: 0 42rpx;
}
.entry-orders-list .item{
  line-height: 96rpx;
  justify-content: space-between
}
.entry-orders-list .add,.entry-orders-list .minus{
  transform: translateY(10rpx)
}
.entry-orders-list .bottom{
  padding: 0 42rpx;
  line-height: 78rpx
}
/*  */
.page{
  padding: 92rpx 0 0 180rpx;
}
.classify-title{
  background-color: #F9F9F9;
  border-top: 1px solid #ECECEC;
  border-bottom: 1px solid #ECECEC;
  line-height: 42rpx;
  text-indent: 20rpx
}
.greens-list{
  padding: 8rpx;
  flex-wrap: wrap
}
.greens-item1{
  width: 272rpx;
  height: 188rpx;
  margin: 0 8rpx 8rpx 0;
  border: 1px solid #DFDEDE;
  border-radius: 10rpx;
  padding: 12rpx 14rpx;

}
.greens-item1.on{
  border: 1px solid #EB8A86
}
.greens-item1:nth-child(2n){
  margin-right: 0
}
.greens-item1 .price{
  color: #DA251D;
  margin: 24rpx 0
}
.quantity{
  right: 14rpx;
  bottom: 12rpx;
  z-index: 9
}
.quantity text{
  color: #DA251D;
  margin-right: 8rpx;
  line-height: 40rpx
}
.quantity .btn{
  width: 40rpx;
  height: 40rpx;
}
/*  greens-item  */
.greens-item{
  margin-bottom: 24rpx
}
.greens-item:last-child{
  margin-bottom: 0
}
.greens-item .img{
  width: 168rpx;
  height: 116rpx;
  margin-right: 28rpx
}
.info{
  flex: 1;
}
.sales1{
  margin: 12rpx 0
}
.quantity1{
  top: 45rpx;
  right: 18rpx
}
.quantity1 .add,.quantity1 .minus{
  width: 40rpx;
  height: 40rpx;
}
.quantity1 .num{
  color: #DA251D;
  margin: 0 10rpx;
}
/* 规格和套餐的弹框  */
.pop-up{
  z-index: 999
}
.pop-box{
  top: 174rpx;
  left: 2.75%;
  width: 94.5%;
  z-index: 999;
  border-radius:10rpx 
}
.dish-name{
  line-height: 72rpx;
}
.specification,.taste,.practice,.pop-up .bottom{
   padding: 0 32rpx;
}
.specification{
  margin-top: 30rpx;
}
.spec-list{
  padding: 32rpx 0;
}
.spec-item{
  width: 114rpx;
  line-height: 46rpx;
  background-color: #EF9BA0;
  border-radius: 46rpx;
  margin-left: 42rpx
}
.spec-item:first-child{
  margin-left: 0
}
.pop-up .bottom{
  line-height: 92rpx;
}
.spec-btn{
  width: 150rpx;
  height:60rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  background-color: #EF9BA0;
  margin-top: 17rpx
}
.close-btn{
  width: 62rpx;
  height: 62rpx;
  top: 8rpx;
  left: 8rpx
}
.a-scroll{
  width: 100%;
      height: 1200rpx;
      white-space: nowrap; 
}
