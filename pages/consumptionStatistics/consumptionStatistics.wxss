.select-before-color{
  color:#666
}
.select-after-color{
  color:#EF9BA0
}
.select_box{
  width:45%;
  height:70%;
  border-radius: 14rpx;
  position: relative;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}
.select_box .select .select_text{
  font-size: 26rpx;
  color: #777777;
  line-height: 28rpx;
  flex: 1;
}
.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
  transition:transform 0.3s;
}
.select_box .select .select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 116rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: rgba(0,0,0,0.4);
  /* transition: height 0.3s; */
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  z-index:999;
}
.option_box .option{
  display: block;
  line-height: 30rpx; 
  font-size: 26rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.type-parameter{
  position: fixed;
  top: 0;left: 0;
  width: 100%;
  line-height: 86rpx;
  border-bottom: 1px solid #D4D3D3;
  z-index: 9999 
}
.type-parameter>view{
  padding-right: 16rpx;
  border-right: 1px solid #E4E4E4 
}
.type-parameter>view:last-child{
  border-right: none
}
.type-parameter image{
  width: 42rpx;
  height: 20rpx;
  margin-top: 43rpx;
  transform: translateY(-50%)
}
