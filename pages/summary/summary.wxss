/* pages/summary/summary.wxss */
page{
  padding-top: 100rpx
}
.type-parameter{
  position: fixed;
  top: 0;left: 0;
  width: 100%;
  line-height: 86rpx;
  border-bottom: 1px solid #D4D3D3;
  z-index: 9999 
}
.type-parameter>view{
  padding-right: 16rpx;
  border-right: 1px solid #E4E4E4 
}
.type-parameter>view:last-child{
  border-right: none
}
.type-parameter image{
  width: 42rpx;
  height: 20rpx;
  margin-top: 43rpx;
  transform: translateY(-50%)
}
.summary-list{
  margin-top: 22rpx;
  border-top: 1px solid #D4D3D3;
  padding:36rpx 50rpx 0  
}
.summary-list .item{
  margin-bottom: 50rpx
}
